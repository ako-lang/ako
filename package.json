{
  "name": "ako-lang",
  "version": "0.0.11",
  "description": "Simple and easy to use programming language. Ako is designed to be used as both a programming language and a visual programming language.",
  "main": "./dist/ako-node.js",
  "types": "./src/dist/ako-node.ts",
  "bin": {
    "ako": "./dist/ako-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ako-lang/ako"
  },
  "bugs": {
    "url": "https://github.com/ako-lang/ako/issues"
  },
  "keywords": [
    "script",
    "programming",
    "language",
    "cli",
    "nocode",
    "lowcode",
    "interpreter"
  ],
  "author": {
    "name": "Kevin destrem",
    "email": "kef1@free.fr"
  },
  "homepage": "https://ako-lang.github.io/ako/index.html#/",
  "license": "MIT",
  "scripts": {
    "build": "run-s build:*",
    "build:prepare": "prettier --write \"src/**/*.ts\"",
    "build:prepare2": "prettier --write \"tests/**/*.ts\"",
    "build:types": "run-p build:types:*",
    "build:types:global": "tsc",
    "build:cli": "esbuild ./src/dist/ako-cli.ts --bundle --minify --platform=node --outfile=dist/ako-cli.js --banner:js=//[AKO_CLI][website:https://github.com/ako-lang/ako]",
    "build:types:cli": "node ./tools/gen-typings.js ako-cli",
    "build:node": "esbuild ./src/dist/ako-node.ts --bundle --minify --platform=node --outfile=dist/ako-node.js --banner:js=//[AKO_Node][website:https://github.com/ako-lang/ako]",
    "build:types:node": "node ./tools/gen-typings.js ako-node",
    "build:web": "esbuild ./src/dist/ako-web.ts --bundle --minify --target=es2018 --format=esm --outfile=dist/ako-web.js --banner:js=//[AKO_Web][website:https://github.com/ako-lang/ako]",
    "build:types:web": "node ./tools/gen-typings.js ako-web",
    "build:web-light": "esbuild ./src/dist/ako-weblight.ts --bundle --minify --target=es2018 --format=esm --outfile=dist/ako-weblight.js --banner:js=//[AKO_Weblight][website:https://github.com/ako-lang/ako]",
    "build:types:web-light": "node ./tools/gen-typings.js ako-weblight",
    "build:post": "node ./tools/prepend.js",
    "coverage": "nyc --reporter=text-lcov mocha ./tests/**/*.test.ts > coverage.lcov",
    "coverage-user": "nyc mocha ./tests/**/*.test.ts",
    "package": "run-s package:*",
    "package:win": "cd dist && nexe --input=./ako-cli.js --output=./bin/ako.exe --target=win-12.12.0",
    "package:macos": "cd dist && nexe --input=./ako-cli.js --output=./bin/ako-osx --target=darwin-12.12.0",
    "package:linux": "cd dist && nexe --input=./ako-cli.js --output=./bin/ako-linux --target=linux-12.12.0",
    "dev": "mocha ./tests/**/*.test.ts --reporter mochawesome",
    "test": "run-s test:*",
    "test:depencencies": "npm-check --production || echo \"Run 'npm run update' to interactively update dependencies for this project\"",
    "test:unit-test": "mocha ./tests/**/*.test.ts",
    "test:lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test:prettier": "prettier --check \"src/**/*.ts\"",
    "update": "npm-check --update"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "esbuild": "^0.11.18",
    "esbuild-register": "^2.5.0",
    "eslint": "^7.25.0",
    "mocha": "^8.3.2",
    "mocha-lcov-reporter": "^1.3.0",
    "mochawesome": "^6.2.2",
    "nexe": "^4.0.0-beta.18",
    "npm-check": "^5.9.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "ohm-js": "^15.5.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  }
}
